<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ghc.project.seedoctor.mapper.RegisterMapper">

    <select id="getRegister" resultType="com.ghc.project.seedoctor.domain.Register">
        select * from register
        <where>
            <if test="deptId != null and deptId != 0 ">
                dept_id = #{deptId}
            </if>
            <if test="patientName != null and patientName != '' ">
                and patient_name like  concat('%',#{patientName},'%')
            </if>
            <if test="registerType !=null and registerType != '' ">
                and register_type = #{registerType}
            </if>
            <if test="registerSchedule != null and registerSchedule != '' ">
                and register_schedule = #{registerSchedule}
            </if>
            <if test="status != null and status != '' ">
                and status = #{status}
            </if>
            <if test="registerSchedule != null and registerSchedule != '' ">
                and register_schedule = #{registerSchedule}
            </if>
            <if test="registerTime != null and registerTime != '' ">
                and register_time = #{registerTime}
            </if>
        </where>
    </select>



</mapper>